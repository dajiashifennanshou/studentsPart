<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/grade_list_item_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/grade_list_item_bk"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/darkgrey"
            android:padding="8dp">
            <TextView
                android:id="@+id/grade_detail_list_item_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="数学"
                android:textSize="17sp" />
            <TextView
                android:layout_width="0dp"
                android:id="@+id/grade_detail_list_item_mark"
                android:gravity="center"
                android:text="95"
                android:textColor="@color/red"
                android:textSize="17sp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:gravity="center"
                android:textSize="17sp"
                android:text="班级排名"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="0dp"
                android:gravity="center"
                android:text="95"
                android:id="@+id/grade_detail_list_item_classrank"
                android:textColor="@color/green"
                android:textSize="17sp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="1dp"
                android:background="@color/black"
                android:layout_height="match_parent">
            </View>
            <TextView
                android:layout_width="0dp"
                android:gravity="center"
                android:textSize="17sp"
                android:text="年级排名"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="0dp"
                android:gravity="center"
                android:text="95"
                android:id="@+id/grade_detail_list_item_graderank"
                android:textColor="@color/blue"
                android:textSize="17sp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>