<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/contact_teacher_name"
                android:layout_width="wrap_content"
                android:text="王永军"
                android:textSize="17sp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:text="王永军"
                android:id="@+id/contact_teacher_position"
                android:layout_marginLeft="30dp"
                android:textSize="17sp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:text="王永军"
                android:id="@+id/contact_teacher_teachertitle"
                android:layout_marginLeft="30dp"
                android:textSize="17sp"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="156625655"
            android:id="@+id/contact_teacher_phone"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textSize="17sp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/contact_teacher_message"
            android:layout_width="40dp"
            android:layout_toLeftOf="@+id/contact_teacher_call"
            android:layout_marginRight="20dp"
            android:src="@drawable/icon_contact_teacher_message"
            android:layout_height="40dp" />
        <ImageView
            android:id="@+id/contact_teacher_call"
            android:layout_width="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_contact_teacher_phone"
            android:layout_height="40dp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgray"></View>
</LinearLayout>