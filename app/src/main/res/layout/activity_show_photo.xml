<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xdk.df.parentend.ui.login.todayCheck.ShowPhotoActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/steelblue"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:id="@+id/show_photo_back"
                android:clickable="true"
                android:background="@drawable/back_forword_selecter"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:scaleY="0.7"
                    android:scaleX="0.7"
                    android:src="@drawable/ico_forward"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="抓拍图片"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/fragment_todaycheck_item_portrait"
        android:layout_width="300dp"
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:layout_height="300dp" />
</RelativeLayout>
